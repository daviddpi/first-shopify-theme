{% if pagination.pages > 0 %}
  <nav role="navigation" class="flex justify-center my-8">
    {% if pagination.previous %}
      <a class="border border-gray-600 text-gray-600 hover:bg-gray-600 hover:text-white py-3 px-8 mx-1 rounded-sm font-medium flex justify-center items-center gap-1" href="{{ pagination.previous.url  }}">{% render 'icon-left-page' %} Previous</a>
    {% else %}
      <span class="border border-gray-300 text-gray-300 py-3 px-8 mx-1 rounded-sm font-medium pointer-events-none flex justify-center items-center gap-1">
        {% render 'icon-left-page' %} Previous
      </span>
    {% endif %}

    {% for part in pagination.parts %}
      {% if part.is_link %}
        <a class="border border-gray-600 text-gray-600 hover:bg-gray-600  hover:text-white py-3 px-8 mx-1 rounded-sm font-medium" href="{{part.url}}">{{ part.title }}</a>
      {% else %}
        <span class="border border-gray-300 text-gray-300 py-3 px-8 mx-1 rounded-sm font-medium pointer-events-none">
          {{ part.title }}
        </span>
      {% endif %}
    {% endfor %}

    {% if pagination.next %}
      <a class="border border-gray-600 text-gray-600 hover:bg-gray-600 hover:text-white py-3 px-8 mx-1 rounded-sm font-medium flex justify-center items-center gap-1" href="{{ pagination.next.url  }}">Next {% render 'icon-right-page' %}
      </a>
    {% else %}
      <span class="border border-gray-300 text-gray-300 py-3 px-8 mx-1 rounded-sm font-medium pointer-events-none flex justify-center items-center gap-1">
        Next {% render 'icon-right-page' %}
      </span>
    {% endif %}
  </nav>
{% endif %}